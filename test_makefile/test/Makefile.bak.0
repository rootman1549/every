DIR_INC = ./include
DIR_SRC = ./src
DIR_OBJ = ./obj
DIR_BIN = ./bin

SRC_FILE = $(wildcard ${DIR_SRC}/*.c)
OBJ_FILE = $(patsubst %.c, ${DIR_OBJ}/%.o, $(notdir ${SRC_FILE}))

TARGET = main

BIN_TARGET = ${DIR_BIN}/${TARGET}

CC = gcc
CFLAGS = -g -Wall -I${DIR_INC}


${BIN_TARGET}:${OBJ_FILE}
	$(CC) $(OBJ_FILE) -o $@

	echo $(SRC_FILE)
	echo $(OBJ_FILE)

${DIR_OBJ}/%.o:${DIR_SRC}/%.c
	$(CC) $(CFLAGS) -c $< -o $@

.PHONY:clean
clean:
	find ${DIR_OBJ} -name *.o -exec rm -rf {}
